[Unit]
Description=Aktualizr SOTA Client
After=network-online.target nss-lookup.target rollback-manager.service
Requires=rollback-manager.service
Wants=network-online.target
ConditionPathExists=/var/sota/import/gateway.url

[Service]
RestartSec=10
Restart=always
Environment="DOCKER_CONFIG=/etc/docker"
ExecStart=/usr/bin/aktualizr $AKTUALIZR_CMDLINE_PARAMETERS

[Install]
WantedBy=multi-user.target
